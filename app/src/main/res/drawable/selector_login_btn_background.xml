<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/fire_engine_red_dark"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/fire_engine_red_light"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="@color/red_d0021b"/>
        </shape>
    </item>
</selector>