<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_property_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10_dp"
        android:layout_marginTop="@dimen/size_10_dp"
        android:text="关注抖音1234"/>

    <TextView
        android:id="@+id/tv_property_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_property_title"
        android:layout_marginLeft="@dimen/size_10_dp"
        android:layout_marginTop="@dimen/size_10_dp"
        android:text="2018-10-1 08:08:08"/>

    <TextView
        android:id="@+id/tv_property_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/size_10_dp"
        android:layout_marginTop="@dimen/size_10_dp"
        android:layout_marginRight="@dimen/size_10_dp"
        android:text="500"
        android:textColor="@color/tahiti_gold"/>

    <TextView
        android:id="@+id/tv_property_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_property_gold"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/size_5_dp"
        android:layout_marginLeft="@dimen/size_10_dp"
        android:layout_marginTop="@dimen/size_10_dp"
        android:layout_marginRight="@dimen/size_10_dp"
        android:text="流水号：1232"/>
</RelativeLayout>