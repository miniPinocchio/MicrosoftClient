<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.microsoft.ui.activity.QrCodeActivity">

    <include layout="@layout/layout_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_50_dp"
        android:layout_marginBottom="@dimen/size_50_dp"
        android:layout_marginLeft="@dimen/size_30_dp"
        android:layout_marginRight="@dimen/size_30_dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_qrcode_share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_dp"
            android:layout_marginLeft="@dimen/size_20_dp"
            android:layout_marginRight="@dimen/size_20_dp"
            android:layout_marginTop="@dimen/size_30_dp"
            android:layout_marginBottom="@dimen/size_20_dp"
            android:layout_weight="0.6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20_dp"
            android:layout_marginRight="@dimen/size_20_dp"
            android:layout_marginTop="@dimen/size_30_dp"
            android:layout_marginBottom="@dimen/size_20_dp"
            android:gravity="center_horizontal"
            android:text="扫一扫二维码图案，可下载应用"/>


    </LinearLayout>

</LinearLayout>
