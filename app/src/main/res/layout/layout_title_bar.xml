<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48_dp"
    android:orientation="horizontal"
    android:background="@color/sunglow">

   <ImageView
       android:id="@+id/iv_title_arrow"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:src="@drawable/icon_back_font"
       android:layout_centerVertical="true"
       android:padding="@dimen/size_10_dp"
       android:layout_marginLeft="@dimen/size_5_dp"
       />

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_bar_title"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="@dimen/size_22_sp"
       />

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_bar_title"
        android:textColor="@color/color_white"
        android:textSize="@dimen/size_22_sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/size_10_dp"
        android:visibility="gone"
        />



</RelativeLayout>